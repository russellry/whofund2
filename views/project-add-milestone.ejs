<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <% include partials/base.ejs %>
    <div
      class="container-fluid"
      style="text-align: center; margin-top: 2%; margin-bottom: 5%;"
    >
      <form
        id="milestoneForm"
        action="/project/<%=projInfo[0].projtitle%>/add-milestone"
        method="POST"
      >
        <div class="form-group">
          <label for="milestoneNumber">Milestone Number</label>
          <input
            type="text"
            min="1"
            max="20"
            step="1"
            class="form-control"
            name="milestoneNumber"
            aria-describedby="milestoneNumberHelp"
            placeholder="Enter milestone number..."
            required
          />
        </div>
        <div class="form-group">
          <label for="milestoneDesc">Milestone Rewards Description</label>
          <input
            type="text"
            class="form-control"
            name="milestoneDesc"
            aria-describedby="milestoneDescHelp"
            placeholder="Enter Milestone Description..."
            required
          />
        </div>
        <div class="form-group">
          <label for="milestoneTargetAmt">Milestone Target Amount</label>
          <input
            type="number"
            min="0.00"
            max="10000.00"
            step="1"
            class="form-control"
            name="milestoneTargetAmt"
            aria-describedby="milestoneTargetAmtHelp"
            placeholder="Enter Milestone Target Amount..."
            required
          />
        </div>

        <button type="submit" class="btn btn-primary">Create Milestone</button>
      </form>
    </div>
  </body>
</html>
