<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <% include partials/base.ejs %>
    <form id="fundSubmitForm" action="/fund-submit" method="POST">
      <div class="form-group">
        <label for="projectTitle">Project Title</label>
        <input
          type="text"
          class="form-control"
          name="projectTitle"
          aria-describedby="projectTitleHelp"
          placeholder="Enter project title..."
        />
      </div>
      <div class="form-group">
        <label for="projectDesc">Description</label>
        <input
          type="text"
          class="form-control"
          name="projectDesc"
          aria-describedby="projectDescHelp"
          placeholder="Enter Description..."
        />
      </div>
      <div class="form-group">
        <label for="projectTargetAmt">Target Amount</label>
        <input
          type="number"
          min="1"
          step="1"
          class="form-control"
          name="projectTargetAmt"
          aria-describedby="projectTargetAmtHelp"
          placeholder="Enter Project Target Amount..."
        />
      </div>
      <div class="form-group">
        <label for="projectDeadline">Deadline</label>
        <input
          type="date"
          class="form-control"
          name="projectDeadline"
          aria-describedby="projectDeadlineHelp"
        />
      </div>
      <div class="form-group">
        <label for="tierOneAmount">Tier 1 Amount</label>
        <input
          type="number"
          min="1"
          step="1"
          class="form-control"
          name="tierOneAmount"
          aria-describedby="tierOneAmount"
          placeholder="Enter Tier 1 Amount..."
        />
      </div>
      <div class="form-group">
        <label for="tierOneRewards">Tier 1 Rewards</label>
        <input
          type="text"
          class="form-control"
          name="tierOneRewards"
          aria-describedby="tierOneRewards"
          placeholder="Enter Tier 1 Rewards..."
        />
      </div>
      <div class="form-group">
        <label for="tierTwoAmount">Tier 2 Amount</label>
        <input
          type="number"
          min="1"
          step="1"
          class="form-control"
          name="tierTwoAmount"
          aria-describedby="tierTwoAmount"
          placeholder="Enter Tier 2 Amount..."
        />
      </div>
      <div class="form-group">
        <label for="tierTwoRewards">Tier 2 Rewards</label>
        <input
          type="text"
          class="form-control"
          name="tierTwoRewards"
          aria-describedby="tierTwoRewards"
          placeholder="Enter Tier 2 Rewards..."
        />
      </div>
      <div class="form-group">
        <label for="tierThreeAmount">Tier 3 Amount</label>
        <input
          type="number"
          min="1"
          step="1"
          class="form-control"
          name="tierThreeAmount"
          aria-describedby="tierThreeAmount"
          placeholder="Enter Tier 3 Amount..."
        />
      </div>
      <div class="form-group">
        <label for="tierThreeRewards">Tier 3 Rewards</label>
        <input
          type="text"
          class="form-control"
          name="tierThreeRewards"
          aria-describedby="tierThreeRewards"
          placeholder="Enter Tier 3 Rewards..."
        />
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </body>
</html>
